      <a href="{{path ('app_login')}}">connexion</a>/ <a href="{{path ('register')}}">inscription</a>
    {% endif %}

{% endblock %}
    
{% block content %}

<p>bienvenue sur la boutique A</p>
{% endblock %}



</html>